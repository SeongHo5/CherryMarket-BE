<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cherrydev.cherrymarketbe.cart.repository.CartMapper">

    <resultMap id="cartResultMap" type="com.cherrydev.cherrymarketbe.cart.entity.Cart">
        <result property="cartId" column="CART_ID"/>
        <result property="accountId" column="ACNT_ID"/>
        <result property="goodsId" column="GOODS_ID"/>
        <result property="goodsQuantity" column="CART_QY"/>
        <result property="createdAt" column="CREAT_DE"/>
        <result property="updatedAt" column="UPDT_DE"/>
    </resultMap>

    <select id="findCartsByAccountId" resultMap="cartResultMap">
        select * from cart where account_id = #{accountId}
    </select>

</mapper>